<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1>Add a Review</h1>
      <%= simple_form_for [@restaurant, @review], class: 'form-group' do |f| %>
        <%= f.input :content, class: 'form-control' %>
        <%= f.label :rating %>
        <%= f.select :rating, (0..5), {}, class: 'form-control' %>
        <%= f.button :submit, class: 'btn btn-primary mt-3' %>
      <% end %>

    </div>
  </div>
</div>
