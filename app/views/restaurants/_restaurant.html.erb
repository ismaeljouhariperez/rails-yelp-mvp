<div class="container my-4">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title"><%= restaurant.name %></h2>
          <p class="card-text">Address: <%= restaurant.address %></p>
          <p class="card-text">Category: <%= restaurant.category %></p>
          <p class="card-text">Phone: <%= restaurant.phone_number %></p>
          <h4 class="mt-4">Latest Reviews</h4>
            <% restaurant.reviews.limit(2).each do |review| %>
              <hr>
              <div class="review">
                <p>Rating: <%= review.rating %></p>
                <p>Review: <%= review.content %></p>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
